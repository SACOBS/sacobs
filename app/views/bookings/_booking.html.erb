<% booking_decorator = decorate(booking) %>
<%= content_tag(:tr, class: booking_decorator.row_class) do %>
    <td>
      <%= booking_decorator.show_link class: t('buttons.mini.info') %>
      <%= booking_decorator.ticket_link class: t('buttons.mini.default'), target: '_blank' %>
      <%= booking_decorator.confirmation_link class: t('buttons.mini.inverse') %>
      <%= booking_decorator.destroy_link class: t('buttons.mini.danger'), data: { confirm: 'Are you sure you wish to destroy this booking?' } %>
      <%= booking_decorator.cancel_link class: t('buttons.mini.warning') %>
    </td>
    <td>
      <small>
        <%= booking_decorator.created_at %>
      </small>
    </td>
    <td data-dateformat="DD MMM">
      <%= booking_decorator.client_link target: '_blank' %>
    </td>
    <td>
      <ul class="inline">
        <li>
          <%= contact_number(booking_decorator.client_home_no, 'Home') %>
        </li>
        <li>
          <%= contact_number(booking_decorator.client_work_no, 'Work') %>
        </li>
        <li>
          <%= contact_number(booking_decorator.client_cell_no, 'Cell') %>
        </li>
      </ul>
    </td>
    <td data-dateformat="DD MMM">
      <small>
        <%= booking_decorator.trip_start_date %>
      </small>
    </td>
    <td>
      <%= booking_decorator.quantity %>
    </td>
    <td>
      <%= booking_decorator.connection %>
    </td>
<% end %>
