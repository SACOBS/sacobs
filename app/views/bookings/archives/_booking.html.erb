<tr>
  <td>
    <%= link_to bookings_archive_path(booking), class: 'btn btn-mini btn-info' do %>
      <%= fa_icon :info, text: 'Show' %>
    <% end %>
    <% unless booking.paid? || booking.reserved? %>
        <%= link_to ticket_path(booking), class: 'btn btn-mini btn-default', target: '_blank' do %>
            <%= fa_icon :tasks, text: 'Ticket' %>
        <% end %>
    <% end %>
  </td>
  <td>
    <%= status_label_for(booking) %>
  </td>
  <td>
    <%= link_to booking.client, target: '_blank' do %>
        <%= content_tag(:em, booking.client.full_name) %>
    <% end %>
  </td>
  <td data-dateformat="ll">
    <%= local_date(booking.trip.start_date) %>
  </td>
  <td>
    <%= badge_for(booking.quantity) %>
  </td>
  <td>
    <%= content_tag(:span, booking.stop.name, class: 'label label-inverse') %>
  </td>
</tr>
