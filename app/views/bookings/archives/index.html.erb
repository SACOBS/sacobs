<%= content_for (:title) do %>
    Archived Bookings
<% end %>
<div class="page-header">
  <h2>Archived Bookings</h2>
  <%= link_to bookings_archives_path, class: 'btn btn-default' do %>
      <%= fa_icon :refresh, text: 'Refresh' %>
  <% end %>
</div>
<div class="search pull-right">
  <%= simple_form_for :q, url: search_bookings_archives_path, defaults: { required: false, label: false }, html: { class: 'form-inline', method: :get, id: 'booking_search', data: { type: :html } } do |f| %>
      <%= f.input :created_at_date_eq, as: :date_picker, placeholder: 'Search booking dates' %>
      <%= f.input :reference_no_or_client_surname_cont, as: :search_box %>
      <%= f.button :submit, 'Search', class: 'btn btn-mini btn-warning' %>
      <%= link_to bookings_archives_path, class: 'btn btn-mini btn-inverse' do %>
          <%= fa_icon :times, text: 'Clear' %>
      <% end %>
  <% end %>
</div>
<div id="bookings">
  <%= paginate @bookings %>
  <% if @bookings.any? %>
      <%= bootstrap_table headers: ['Actions', 'Status', 'Client Name', 'Trip Date', 'Qty', 'Connection'], types: %i(hover condensed), html_options: { class: 'sortable' } do %>
          <%= render partial: 'bookings/archives/booking', collection: @bookings, cache: true %>
      <% end %>
  <% else %>
      <h3>There are currently 0 archived bookings.</h3>
  <% end %>
</div>
<br/>
<%= link_to bookings_archives_path, class: 'btn btn-default' do %>
    <%= fa_icon :refresh, text: 'Refresh' %>
<% end %>