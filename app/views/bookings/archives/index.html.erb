<%= content_for (:title) do %>
    Archived Bookings
<% end %>
<div class="page-header">
  <h2>Archived Bookings</h2>
  <%= link_to bookings_archives_path, class: 'btn btn-default' do %>
      <%= fa_icon :refresh, text: 'Refresh' %>
  <% end %>
</div>
<div class="search pull-right">
  <%= render 'search_form' %>
</div>
<div id="bookings">
  <%= paginate @bookings %>
  <% if @bookings.any? %>
      <%= bootstrap_table headers: ['Actions', 'Status', 'Client Name', 'Trip Date', 'Qty', 'Connection'], types: %i(hover condensed), html_options: { class: 'sortable' } do %>
          <%= render partial: 'bookings/archives/booking', collection: @bookings, cache: true %>
      <% end %>
  <% else %>
      <h3>There are currently 0 archived bookings.</h3>
  <% end %>
</div>
<br/>
<%= link_to bookings_archives_path, class: 'btn btn-default' do %>
    <%= fa_icon :refresh, text: 'Refresh' %>
<% end %>