- if @trips
  - bootstrap_table headers:['Trips'], types: [:bordered] do
    - @trips.each do |trip|
      %tr
        %td
          = simple_form_for :trip, namespace: trip.id ,url: booking_builder_index_url, wrapper: false, defaults: {label: false} do |f|
            %table.table-bordered
              - table_headers(['Name', 'Start', 'End', 'Connection', 'Qty', 'Return' , 'Actions'])
              %tr
                %td= trip.name
                %td= trip.start_date
                %td= trip.end_date
                %td= f.input :connection, collection: trip.connections, include_blank: false
                %td= f.input :seats, as: :integer
                %td= f.input :return, as: :boolean
                %td
                  = f.hidden_field :id, value: trip.id
                  = f.submit 'Go'
- else
  %p
    %strong
      No trips could be found

