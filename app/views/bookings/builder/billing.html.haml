.page-header
  %h3 Billing
#errors= errors_for @booking
= simple_form_for @booking, url: wizard_path, defaults: { label: false, error: false} do |f|
  .form-actions
    = f.submit 'Complete', class: t('buttons.primary')
    = link_to 'Cancel', booking_path(@booking), method: :delete ,class: t('buttons.danger')


  - bootstrap_table headers:['Description','Amount'], types: [:condensed], html_options: {id: 'line_items'} do
    = f.simple_fields_for :invoice do |invoice|
      = invoice.simple_fields_for :line_items, wrapper: false do |line_item|
        %tr[line_item.object]{data: {type: line_item.object.line_item_type}}
          %td= line_item.input :description
          %td.amount= line_item.input :amount, input_html: {value: number_with_precision(line_item.object.amount, precision: 2)}
          = line_item.input :line_item_type, as: :hidden, value: line_item.object.line_item_type
    = f.simple_fields_for :return_booking do |rf|
      = rf.simple_fields_for :invoice do |rf_invoice|
        = rf_invoice.simple_fields_for :line_items, wrapper: false do |rf_line_item|
          %tr[rf_line_item.object]{data: {type: rf_line_item.object.line_item_type}}
            %td= rf_line_item.input :description
            %td.amount= rf_line_item.input :amount, input_html: {value: number_with_precision(rf_line_item.object.amount, precision: 2)}
            = rf_line_item.input :line_item_type, as: :hidden, value: rf_line_item.object.line_item_type

    %tr
      %td
        %strong Total:
      %td.total
        %strong= number_to_currency(invoice_total(@booking), unit: 'R')
  .form-actions
    = f.submit 'Complete', class: t('buttons.primary')
    = link_to 'Cancel', booking_path(@booking), method: :delete ,class: t('buttons.danger')

