.page-header
  %h3 Charges
  %h4 Select additional charges per passenger

= simple_form_for @booking, url: wizard_path, method: :patch do |f|
  .form-actions
    = f.submit 'Next', class: t('buttons.primary')
    = link_to 'Cancel', booking_path(@booking), method: :delete ,class: t('buttons.danger')
  = f.fields_for :passengers do |p|
    %p.lead="#{p.object.full_name} (#{p.object.passenger_type_description.titleize})"
    = p.input :charges, collection: Charge.all, as: :check_boxes, include_hidden: false,inline_label: true, label_method: :description, label:false
    %hr

  .form-actions
    = f.submit 'Next', class: t('buttons.primary')
    = link_to 'Cancel', booking_path(@booking), method: :delete ,class: t('buttons.danger')



