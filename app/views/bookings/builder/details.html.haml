.page-header
  %h3 Booking
  %h4 Select a trip

.trip-finder.well.well-small
  %h5 Search
  = simple_form_for :q, url: booking_builder_index_path(@booking, return: false), html: {class: 'form-inline'}, method: :get ,remote: true do |f|
    = f.input :trip_start_date_eq, as: :date_picker, placeholder: 'Select a date', label: false
    = f.input :connection_from_city_id_eq, collection: City.all,include_blank: false, label: false, prompt: 'Select from city'
    = f.input :connection_to_city_id_eq, collection: City.all, include_blank: false, label: false, prompt: 'Select to city'
    = f.submit 'Search', class: t('buttons.inverse')

#errors= errors_for @booking
.trips
  = render partial: 'bookings/builder/trips'

= link_to 'Cancel', booking_path(@booking), method: :delete ,class: t('buttons.danger')
