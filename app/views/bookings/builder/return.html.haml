.page-header
  %h3 Select The Return Trip

- bootstrap_table headers:['Trips'], types: [:bordered] do
  - @trips.each do |trip|
    %tr
      %td
        = simple_form_for :trip, namespace: trip.id ,url: wizard_path(:return, booking_id: @booking), method: :patch ,wrapper: false, defaults: {label: false} do |f|
          %table.table-bordered
            - table_headers(['Name', 'Start', 'End', 'From', 'To', 'Qty', 'Actions'])
            %tr
              %td= trip.name
              %td= l trip.start_date, format: :long
              %td= l trip.end_date, format: :long
              %td= f.input :from, collection: City.all, selected: trip.from.id
              %td= f.input :to, collection: City.all, selected: trip.to.id
              %td
                = f.hidden_field :id, value: trip.id
                = f.submit 'Go'


