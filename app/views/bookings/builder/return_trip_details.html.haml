= content_for (:title) do
  Booking Wizard - Choose return trip

.trip-finder.well.well-small
  %h5 Search
  = simple_form_for :q, url: booking_builder_index_path(@booking), html: { class: 'form-inline', id: 'return_trip_search' }, method: :get, remote: true do |f|
    = f.input :from_city, typeahead: cities, label: false, placeholder: 'Select from city', autofocus: true,input_html: { data: { targets: '#q_from_city_id', filter: :name } }
    = f.hidden_field :from_city_id
    = f.input :to_city, typeahead: cities, label: false, placeholder: 'Select to city', input_html: { data: { targets: '#q_to_city_id', filter: :name } }
    = f.hidden_field :to_city_id
    = f.input :trip_date, as: :date_picker, placeholder: 'Select a date', label: false
    = f.submit 'Search', class: t('buttons.inverse')

#errors= errors_for @booking
.returns
  = render partial: 'bookings/builder/return_trips', locals: { booking: @booking, stops: @stops }

= link_to 'Back', previous_wizard_path, class: t('buttons.inverse')
= link_to 'Cancel', booking_path(@booking), method: :delete, class: t('buttons.danger')
