%tr[bus]
  %td= link_to bus.name, bus
  %td= bus.year
  %td= bus.model
  %td= bus.capacity
  %td
    = link_to 'Show', bus, icon: :info, class: t('buttons.mini.info')
    = link_to 'Edit', bus_builder_path(:details, bus_id: bus), icon: :edit, class: t('buttons.mini.inverse')
    = link_to 'Delete', bus, icon: :times, data: { confirm: t('messages.confirm', resource: :bus)}, method: :delete, class: t('buttons.mini.danger')
