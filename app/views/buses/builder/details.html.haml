= content_for(:title) do
  Bus Wizard - Details

#errors= errors_for @bus
= simple_form_for @bus, url: wizard_path, defaults: { error: false }, html: { class: 'form-horizontal',  method: :patch }  do |f|
  %fieldset
    = f.input :name, autofocus: true
    = f.input :capacity
    = f.input :year
    = f.input :model
  .control-group
    .controls
      = f.submit 'Next', class: t('buttons.primary')
      = link_to 'Cancel', buses_path, class: t('buttons.danger')
