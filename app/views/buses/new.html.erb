<%= content_for(:title) do %>
    New Bus
<% end %>
<div class="page-header">
  <h2>New Bus</h2>
</div>
<div id="errors">
  <%= errors_for @bus %>
</div>
<%= simple_form_for @bus, defaults: { error: false }, html: { class: 'form-horizontal' } do |f| %>
    <div class="control-group">
      <div class="controls">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
    <fieldset>
      <%= f.input :name, autofocus: true, placeholder: 'Name' %>
      <%= f.input :capacity %>
      <%= f.input :year, placeholder: 'Year' %>
      <%= f.input :model, placeholder: 'Model' %>
    </fieldset>
    <div class="control-group">
      <div class="controls">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
