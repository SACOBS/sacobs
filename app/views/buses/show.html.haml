= content_for(:title) do
  #{@bus.name}

- cache @bus do
  .page-header
    %h2 Bus
    .actions
      = back_to buses_path
      = link_to_if(policy(@bus).update?, 'Edit', edit_bus_path(@bus), icon: :edit, class: t('buttons.inverse')){}
      = link_to_if(policy(@bus).destroy?, 'Destroy', bus_path(@bus), method: :delete, data: { confirm: t('messages.confirm', resource: :bus) }, icon: :times, class: t('buttons.danger')){}
  .well
    %p
      %strong Name:
      %br
      = @bus.name
    %p
      %strong Capacity:
      %br
      = @bus.capacity
    %p
      %strong Year:
      %br
      = @bus.year
    %p
      %strong Model:
      %br
      = @bus.model
  .well
    %p
      %strong Seats:
      = bootstrap_table headers: %w(Row Number), types: %i(hover condensed), html_options: { class: 'sortable' } do
        - @bus.seats.each do |seat|
          %tr
            %td= seat.row
            %td= seat.number



