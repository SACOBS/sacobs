%tr[city]
  %td= link_to city.name, city
  %td= city.venues.size
  %td
    = link_to 'View',city, icon: :info, class: t('buttons.mini.info')
    = link_to 'Edit', edit_city_path(city), icon: :edit, class: t('buttons.mini.inverse')
    = link_to 'Destroy', city, icon: :times, data: { confirm: 'Are you sure you want to destroy this city?'}, method: :delete, class: t('buttons.mini.danger')
