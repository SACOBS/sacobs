#errors= errors_for @city
= simple_form_for @city, defaults: {error: false} ,html: {class: 'form-horizontal'} do |f|
  %fieldset
    = f.input :name, required: false
  #venues
    = f.simple_fields_for :venues do |venue|
      = render 'venue_fields', f: venue
    .links
      %hr
      = link_to_add_association 'Add Venue', f, :venues, class: 'btn btn-info btn-mini'
      %hr
  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', cities_path, class: 'btn'