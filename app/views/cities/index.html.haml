.page-header
  %h2 Cities
.search.pull-right
  = simple_form_for :q, url: search_cities_path, defaults: { required: false, label: false }, html: { class: 'form-inline', id: 'city_search', method: :get, data: { type: :html } }, remote: true do |f|
    = f.input :name_cont, as: :search_box
    = f.submit 'Search', class: t('buttons.mini.warning')
    = link_to 'Clear', cities_path, class: t('buttons.mini.inverse'), icon: :times

= link_to 'Setup City', new_city_path, class: t('buttons.primary'), icon: :plus
= link_to 'Refresh', cities_path, class: t('buttons.default'), icon: :refresh

#cities
  = render partial: 'cities', locals: { cities: @cities }


