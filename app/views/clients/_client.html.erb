<div class="col-md-4 client well well-sm" id="<%= dom_id(client) %>">
  <div class="media">
    <div class="pull-left">
      <i class="fa fa-user fa-2x"></i>
    </div>
    <div class="media-body">
      <h5 class="media-heading">
        <%= link_to client.full_name, client %>
      </h5>
      <address>
        <strong>Contact</strong>
        <br/>
        <abbr class="initialism" title="Home">
          <strong>
            H:
            <%= number_to_phone(client.home_no, area_code: true).presence || 'N/A' %>
          </strong>
        </abbr>
        <br/>
        <abbr class="initialism" title="Work">
          <strong>
            W:
            <%= number_to_phone(client.work_no, area_code: true).presence || 'N/A' %>
          </strong>
        </abbr>        <br/>
        <abbr class="initialism" title="Cell">
          <strong>
            C:
            <%= number_to_phone(client.cell_no, area_code: true).presence || 'N/A' %>
          </strong>
        </abbr>        <br/>
        <abbr class="initialism" title="Email">E:</abbr>
        <%= client.email.present? ? mail_to(client.email) : 'N/A' %>
      </address>
      <div class="btn-group">
        <%= link_to client, class: 'btn btn-info btn-sm' do %>
          <%= fa_icon :info, text: 'Show' %>
        <% end %>
        <%= link_to edit_client_path(client), class: 'btn btn-success btn-sm' do %>
            <%= fa_icon :edit, text: 'Edit' %>
        <% end %>
        <%= link_to client, class: 'btn btn-danger btn-sm', method: :delete, data: { behavior: 'delete-client', confirm: t('messages.confirm', resource: :client) }, remote: true do %>
            <%= fa_icon :times, text: 'Destroy' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
