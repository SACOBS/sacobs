- cache client do
  - ClientDecorator.decorate(client, self) do |decorated_client|
    .span4.client.well.well-small
      .media
        .pull-left
          %i.fa.fa-user.fa-3x
        .media-body
          %h5.media-heading
            =link_to decorated_client.full_name, client
          .pull-left
            %address
              %strong Contact
              %br
              %abbr.initialism{title: 'Home'} H:
              %strong= decorated_client.home_telephone
              %br
              %abbr.initialism{title: 'Work'} W:
              %strong= decorated_client.work_telephone
              %br
              %abbr.initialism{title: 'Cell'} C:
              %strong= decorated_client.cellphone
              %br
              %abbr.initialism{title: 'Email'} E:
              = decorated_client.email


          .pull-right
            .btn-group.btn-group-vertical
              = decorated_client.show_link(icon: :info, class: t('buttons.info'))
              = decorated_client.edit_link(icon: :edit, class: t('buttons.inverse'))
              = decorated_client.destroy_link(icon: :times, remote: true, class: t('buttons.danger'), id: 'delete_client', data: { type: :json })
