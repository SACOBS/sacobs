.page-header
  %h2
    Clients
    %small= current_alpha_page(params[:letter])
  = page_entries_info @clients


.search.pull-right
  = simple_form_for :q, url: search_clients_path, defaults: { required: false, label: false }, html: { class: 'form-inline', method: :get, id: 'client_search', data: { type: :html } }, remote: true do |f|
    = f.input :name_or_surname_or_email_or_cell_no_or_work_no_or_home_no_cont, as: :search_box
    = f.submit 'Search', class: t('buttons.mini.warning')
    = link_to 'Clear', clients_path, class: t('buttons.mini.inverse'), icon: :times

= link_to 'Setup Client', new_client_path, class: t('buttons.primary'), icon: :plus
= link_to 'Refresh', clients_path, class: t('buttons.default'), icon: :refresh

= alpha_pager(params[:letter])

#clients
  = render partial: 'clients', locals: { clients: @clients }


= link_to 'Setup Client', new_client_path, class: t('buttons.primary'), icon: :plus
= link_to 'Refresh', clients_path, class: t('buttons.default'), icon: :refresh


