- cache @client do
  .page-header
    %h3= @client.full_name
  .well
    %p
      %strong= Client.human_attribute_name(:name) + ':'
      %br
      = @client.name
    %p
      %strong= Client.human_attribute_name(:surname) + ':'
      %br
      = @client.surname
    %p
      %strong= Client.human_attribute_name(:tel_no) + ':'
      %br
      = @client.telephone
    %p
      %strong= Client.human_attribute_name(:cell_no) + ':'
      %br
      = @client.cellphone
    %p
      %strong= Client.human_attribute_name(:email) + ':'
      %br
      = @client.email
    %p
      %strong Address:
      %address
        = @client.street_address1
        %br
        = @client.street_address2
        %br
        = @client.city
        %br
        = @client.postal_code
  .actions
    = back_to clients_path
    = link_to 'Edit', edit_client_path(@client), icon: :edit, class: 'btn btn-inverse'
    = link_to 'Destroy', @client, icon: :times, data: { confirm: 'Are you sure you want to destroy this client?'}, method: :delete, class: 'btn btn-danger'
