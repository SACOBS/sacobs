.page-header
  %h3= @client.full_name
.well
  %p
    %strong= Client.human_attribute_name(:name) + ':'
    %br
    = @client.name
  %p
    %strong= Client.human_attribute_name(:surname) + ':'
    %br
    = @client.surname
  %p
    %strong= Client.human_attribute_name(:tel_no) + ':'
    %br
    = @client.telephone
  %p
    %strong= Client.human_attribute_name(:cell_no) + ':'
    %br
    = @client.cellphone
  %p
    %strong= Client.human_attribute_name(:email) + ':'
    %br
    = @client.email

  %p
    %strong Address:
    %address
      = @client.street_address1
      %br
      = @client.street_address2
      %br
      = @client.city
      %br
      = @client.postal_code
.actions
  = link_to 'Back', clients_path, class: 'btn btn-primary', icon: :arrow_left
  = link_to 'Edit', edit_client_path(@client), icon: :edit, class: 'btn btn-info'
  = link_to 'Destroy', client_path(@client), method: :delete, data: { confirm: 'Are you sure?' }, icon: :times, class: 'btn btn-danger'

