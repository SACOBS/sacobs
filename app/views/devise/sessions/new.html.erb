<div class="row">
  <div class="col-md-4 col-md-offset-4 well">
    <h2 class='text-center'>Sign in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: 'input-block-level' } %>
        <%= f.input :password, required: false, input_html: { class: 'input-block-level' } %>
        <%= f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false if devise_mapping.rememberable? %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.button :submit, 'Sign in', class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
