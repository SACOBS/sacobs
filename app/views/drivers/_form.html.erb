<%= simple_form_for @driver, html: { class: 'form-horizontal' } do |f| %>

    <fieldset>
      <%= f.input :name, autofocus: true, placeholder: 'Name' %>
      <%= f.input :surname, placeholder: 'Surname' %>
    </fieldset>
    <div class="control-group">
      <div class="controls">
        <%= f.button :submit %>
        <%= link_to 'Cancel', drivers_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
