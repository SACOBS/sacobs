.page-header
  %h2 Driver
.well
  %p
    %strong= Driver.human_attribute_name(:name) + ':'
    %br
    = @driver.name
  %p
    %strong= Driver.human_attribute_name(:surname) + ':'
    %br
    = @driver.surname

.form-actions
  = link_to 'Back', drivers_path, class: 'btn btn-primary', icon: 'fa fa-arrow-left'
  = link_to 'Edit',edit_driver_path(@driver), icon: 'fa fa-edit', class: 'btn btn-info'
  = link_to 'Destroy', driver_path(@driver), method: :delete, data: { confirm: 'Are you sure?' }, icon: 'fa fa-times', class: 'btn btn-danger'






