- cache @driver do
  .page-header
    %h2 Driver
  .well
    %p
      %strong Name:
      %br
      = @driver.name
    %p
      %strong Surname:
      %br
      = @driver.surname

  .form-actions
    = back_to drivers_path
    = link_to 'Edit', edit_driver_path(@driver), icon: :edit, class: t('buttons.info')
    = link_to 'Destroy', driver_path(@driver), method: :delete, data: { confirm: t('messages.confirm', resource: :driver) }, icon: :times, class: t('buttons.danger')






