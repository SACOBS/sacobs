- if user_signed_in?
  = link_to 'Home', dashboard_path, class: 'brand'
  %ul.nav.pull-left
    %li= link_to 'New (B)ooking', bookings_path, method: :post, accesskey: 'b', target: '_blank'
    %li= link_to 'New (C)lient', new_client_path, accesskey: 'c', target: '_blank'
    - if current_user.admin?
      %li= link_to 'New (T)rip', new_trip_path, accesskey: 't', target: '_blank'

    = drop_down_menu('Bookings') do
      %li= link_to 'View', bookings_path
      %li.divider
      %li= link_to 'Archives', bookings_archives_path
    %li= link_to 'Clients', clients_path

    - if current_user.admin?
      = drop_down_menu('Trips') do
        %li= link_to 'View', trips_path
        %li.divider
        %li= link_to 'Archives', trips_archives_path
      %li= link_to 'Manage', admin_index_path

      = drop_down_menu('Reports') do
        %li= link_to 'Reports', reports_path
        %li.divider
        %li= link_to 'Daily Bookings', daily_bookings_path
    %li= link_to 'Quotes', quick_quote_path
    %li= link_to 'Tripsheets', trip_sheets_path
    %li= link_to 'Notes', '#', id: 'show_notes'
  %ul.nav.pull-right
    %li.divider-vertical
    = drop_down_menu('Account') do
      %li= link_to 'Edit account', edit_user_registration_path
      %li.divider
      %li= link_to 'Logout', destroy_user_session_path, method: :delete
    %li.divider-vertical
- else
  = link_to 'Home', root_path, class: 'brand'
  %ul.nav
    %li= link_to 'Login', new_user_session_path
    %li= link_to 'Sign up', new_user_registration_path


