.well
  %h4= pricing.connection_name
  %p
    %strong Ticket Price:
    = number_to_currency pricing.price, unit: 'R'

.row-fluid.span10
  .span5.well
    %h5 Discounts
    - pricing.discount_prices.each do |key, value|
      %ul
        %li #{key.to_s.humanize}: #{number_to_currency(value, unit: 'R')}
  .span5.well
    %h5 Charges
    - pricing.charges.each do |key, value|
      %ul
        %li #{key.to_s.humanize}: #{number_to_currency(value, unit: 'R')}






