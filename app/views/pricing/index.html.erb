<%= content_for :title do %>
  Quick quote
<% end %>
<% content_for :sidebar do %>
  <h3>Quick Quote</h3>
  <div class="connection-finder">
    <%= simple_form_for :q do |f| %>
      <fieldset>
        <legend>
          <h5>Select route</h5>
        </legend>
        <%= f.input :route, collection: Route.all, as: :radio_buttons, item_label_class: 'radio-inline', label: false, autofocus: true,  item_wrapper_tag: false %>
      </fieldset>
    <% end %>
    <h5>Connections</h5>
    <div class='form-group'>
      <input id="connection-search" placeholder="Search Connections" required type="text" class='form-control'>
    </div>
    <div class="connections">
      <ul class="list-unstyled" id="connections-list">
        <% @connections.each do |connection| %>
          <%= content_tag_for :li, connection, data: {route: connection.route_id} do %>
            <%= link_to connection.name, pricing_path(connection), data: {type: :html, behaviour: 'show-prices' }, remote: true %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<div class='page-header'>
  <h2>Quotes</h2>
</div>
<div class="quote">
  <p class='lead'>Please the search functions to choose the connections for which you wish to see quote information.</p>
</div>
