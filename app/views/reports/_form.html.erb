<div class="well">
  <%= simple_form_for @report do |f| %>
    <%= f.input :name %>
    <%= f.input :daily, hint: 'This allows a report to be run each day only for that specific day, it will ignore the period from and period to' %>
    <%= f.input :period_from, as: :date, discard_day: true, order: [:month, :year], use_short_month: true %>
    <%= f.input :period_to, as: :date, discard_day: true, order: [:month, :year],  use_short_month: true %>
    <%= f.simple_fields_for :criteria do |c| %>
      <%= c.input :stop_connection_from_city_id_eq, collection: City.all, label: false, prompt: 'Select from city', input_html: { class: 'input-sm' } %>
      <%= c.input :stop_connection_to_city_id_eq, collection: City.all, label: false, prompt: 'Select to city', input_html: { class: 'input-sm' } %>
      <%= c.input :status_eq_any, label: false, collection: Booking.statuses.except(:in_process).transform_keys(&:upcase), as: :check_boxes,  item_label_class: 'checkbox-inline', item_wrapper_tag: false %>
      <%= c.input :passengers_passenger_type_id_eq_any, item_wrapper_tag: false, label: false, item_label_class: "checkbox-inline", collection: PassengerType.all, label_method: :description, as: :check_boxes %>
    <% end %>
    <%= f.button :submit %>
  <% end %>
</div>
