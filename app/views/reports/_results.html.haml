.well.well-small
  %h3= @report.name
  %h4 Results Summary
  %p Items: #{@results.size}
  %p Total Amount: #{number_to_currency(@results.map(&:price).compact.reduce(&:+))}

.results
  - @results.group_by { |result| result.updated_at.beginning_of_month }.sort.each do |month, results_per_month|
    %h4= l(month.to_date, format: :month)
    = bootstrap_table headers: ['Trip', 'Start Date', 'Status', 'Client', 'Connection', 'Qty', 'Price'], types: [:condensed] do
      - results_per_month.each do |result|
      - booking_decorator = decorate(result)
        %tr
          %td= booking_decorator.trip_name
          %td= booking_decorator.trip_start_date
          %td= booking_decorator.status
          %td= booking_decorator.client_full_name
          %td= booking_decorator.connection
          %td= booking_decorator.quantity
          %td= booking_decorator.price