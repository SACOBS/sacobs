%tr[route]
  %td= link_to route.name, route
  %td= route.start_city_name.presence
  %td= route.end_city_name.presence
  %td= number_to_currency(route.cost, unit: 'R')
  %td= number_to_human(route.distance, units: :distance)
  %td= route.connections.size
  %td
    = link_to 'Show', route, icon: :info, class: t('buttons.mini.info')
    = link_to 'Edit', route_builder_path(:details, route_id: route), icon: :edit,  class: t('buttons.mini.inverse')
    = link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' }, class: t('buttons.mini.danger'), icon: :times

