.page-header
  %h2 Route
#errors= errors_for @route
= simple_form_for @route, url: wizard_path,  defaults: {error: false} ,html: {class: 'form-horizontal'} do |f|
  %fieldset
    = f.association :start_city, include_blank: false, prompt: 'Select Start City'
    = f.association :end_city, include_blank: false ,prompt: 'Select End City'
    = f.input :cost
    = f.input :distance
  .form-actions
    = f.submit class: 'btn btn-primary'
    = link_to 'Cancel', route_builder_path(route_id: @route), method: :delete ,class: 'btn'
