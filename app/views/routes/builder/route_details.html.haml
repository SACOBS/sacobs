#errors= errors_for @route
= simple_form_for @route, url: wizard_path,  defaults: {error: false} ,html: {class: 'form-horizontal'} do |f|
  .form-actions
    = f.submit 'Next',class: t('buttons.primary')
    = link_to 'Cancel', @route, method: :delete ,class: t('buttons.danger')

  %fieldset
    = f.input :name
    = f.input :cost, as: :cost
    = f.input :distance, as: :distance
  .form-actions
    = f.submit 'Next',class: t('buttons.primary')
    = link_to 'Cancel', @route, method: :delete ,class: t('buttons.danger')
