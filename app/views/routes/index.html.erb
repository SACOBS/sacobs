<%= content_for(:title) do %>
    Routes
<% end %>
<div class="page-header">
  <h2>Routes</h2>
  <%= link_to new_route_path, class: 'btn btn-primary' do %>
      <%= fa_icon :plus, text: 'Setup route' %>
  <% end %>
  <%= link_to routes_path, class: 'btn btn-default' do %>
      <%= fa_icon :refresh, text: 'Refresh' %>
  <% end %>
</div>
<% cache @routes do %>
    <%= bootstrap_table headers: ['Actions', 'Description', 'Start City', 'End City', 'Master Rate', 'Distance', 'Connections'], types: %i(hover condensed), html_options: { class: 'sortable' } do %>
        <%= render @routes, cache: true %>
    <% end %>
<% end %>
