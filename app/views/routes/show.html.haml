- cache route do
  .page-header
    %h2 Route

  .form-actions
    = back_to routes_path
    = link_to 'Edit', edit_route_path(route), icon: :edit, class: t('buttons.info')
    = link_to 'Destroy', route , method: :delete, data: { confirm: t('messages.confirm', resource: :route) }, icon: :times, class: t('buttons.danger')

  .well
    %p
      %strong Start City:
      %br
      = route.start_city
    %p
      %strong End City:
      %br
      = route.end_city
    %p
      %strong Cost:
      %br
      = route.cost
    %p
      %strong Distance:
      %br
      = route.distance
  .well
    - cache route.connections do
      %p
        %strong Connections:
        - bootstrap_table headers:['From', 'To','Distance', 'Percentage', 'Cost', 'Depart Time', 'Arrive Time'], types: [:bordered, :condensed], html_options: {id: 'connections', class: 'sortable'} do
          = render route.connections
  .form-actions
    = back_to routes_path
    = link_to 'Edit', edit_route_path(route), icon: :edit, class: t('buttons.info')
    = link_to 'Destroy', route , method: :delete, data: { confirm: t('messages.confirm', resource: :route) }, icon: :times, class: t('buttons.danger')





