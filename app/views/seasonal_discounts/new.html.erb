<%= content_for :title do %>
  New Priority Pricing
<% end %>
<div class="page-header">
  <h2>New Priority Pricing</h2>
</div>
<div class="row">
  <div class="col-md-6 pull-right">
    <div class="calculator well well-sm">
      <h4>Discount calculator</h4>
      <div class="original-price form-group ">
        <label for="original-price">Original Price</label>
        <input id="original-price" class='form-control' type="text" value="0"/>
      </div>
      <div class="discounted-price form-group">
        <label for="discounted-price">New Price</label>
        <input id="discounted-price" class='form-control' type="text" value="0"/>
      </div>
      <div class="results">
        <p id="difference">
          <strong>Difference:</strong>
          <span>0</span>
        </p>
        <p id="percentage">
          <strong>Percentage:</strong>
          <span>0</span>
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-6 pull-left">
    <%= simple_form_for @seasonal_discount do |f| %>
      <fieldset>
        <%= f.input :name, autofocus: true, placeholder: 'Name' %>
        <%= f.association :passenger_type, include_blank: false, label_method: :description %>
        <%= f.input :percentage, placeholder: 'Percentage' %>
        <%= f.input :period_from, placeholder: 'Period from', input_html: {  data: { behaviour: :datepicker } }  %>
        <%= f.input :period_to, placeholder: 'Period to', input_html: {  data: { behaviour: :datepicker } }  %>
        <%= f.input :active, as: :boolean, inline_label: true, label: false %>
      </fieldset>
      <div class="form-group">
        <%= f.button :submit, class: 'btn btn-success'  %>
        <%= link_to 'Cancel', seasonal_discounts_path, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
