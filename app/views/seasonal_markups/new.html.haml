.page-header
  %h2 New Seasonal Markup

#errors= errors_for @seasonal_markup
= simple_form_for @seasonal_markup,  defaults: {error: false} ,html: {class: 'form-horizontal'} do |f|
  %fieldset
    = f.input :percentage
    = f.input :period_from, as: :date_picker
    = f.input :period_to, as: :date_picker
    = f.input :active, as: :boolean
  .form-actions
    = f.submit class: t('buttons.primary')
    = link_to 'Cancel', seasonal_markups_path, class: t('buttons.default')

