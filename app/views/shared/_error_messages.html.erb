<% if object.errors.any? %>
    <div id="error_explanation" class="well well-small">
      <div class="alert alert-error alert-block">
        The form contains <%= pluralize(object.errors.count, "error") %>.
      </div>
        <ul class="unstyled">
          <% object.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>