.page-header.text-center
  %h1 SA CONNECTION

.client.pull-left
  %p
    %strong Name:
    = @ticket.client.full_name
  %p
    %strong Home Tel No:
    = @ticket.client.home_telephone
  %p
    %strong Work Tel No:
    = @ticket.client.work_telephone
  %p
    %strong Cell No:
    = @ticket.client.cellphone

.details.pull-right
  %p
    %strong Reference No:
    = @ticket.booking.reference_no
  %p
    %strong Today's Date:
    = l Time.zone.now, format: :long
%br
%br

.passengers
- bootstrap_table headers:['Date', 'Name' ,'From', 'Terminal', 'To' , 'Terminal', 'Departure', 'Arrival'], types: [:bordered, :condensed] do
  - @ticket.passengers.each do |passenger|
    %tr
      %td= @ticket.booking.trip_start_date
      %td= passenger.full_name
      %td= @ticket.booking.from
      %td= @ticket.booking.from_venue
      %td= @ticket.booking.to
      %td= @ticket.booking.to_venue
      %td= @ticket.booking.stop.depart || l(Time.zone.now, format: :long)
      %td= @ticket.booking.stop.arrive || l(Time.zone.now, format: :long)
  - if @ticket.return
    - @ticket.passengers.each do |passenger|
      %tr
        %td= @ticket.return.trip_start_date
        %td= passenger.full_name
        %td= @ticket.return.from
        %td= @ticket.return.from_venue
        %td= @ticket.return.to
        %td= @ticket.return.to_venue
        %td= @ticket.return.stop.depart || l(Time.zone.now, format: :long)
        %td= @ticket.return.stop.arrive || l(Time.zone.now, format: :long)
  %tr
    %td
    %td
    %td
    %td
    %td
    %td
    %td
      %strong Price:
    %td
      %strong= number_to_currency @ticket.total_cost, unit: 'R'
  %tr
    %td
    %td
    %td
    %td
    %td
    %td
    %td
      %strong Discount:
    %td
      %strong= number_to_currency @ticket.total_discount, unit: 'R'
  %tr
    %td
    %td
    %td
    %td
    %td
    %td
    %td
      %strong Total:
    %td
      %strong= number_to_currency @ticket.total, unit: 'R'
%br
%br
