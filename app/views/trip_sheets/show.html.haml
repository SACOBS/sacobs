.page-header.text-center
  %h5.pull-left
    %strong SA Connection
  %h5.pull-right
    %strong
      = l(Time.zone.now)
  %h2
    = "TRIP SHEET FOR #{@trip.name}"
%p.pull-left
  %strong Drivers:
  - @trip.drivers.each do |driver|
    = driver.name
%p.pull-right
  %strong Bus:
  = @trip.bus.name
%br

%hr
