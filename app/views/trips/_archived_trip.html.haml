- trip_presenter = TripPresenter.new(trip, self)
%tr
  %td=link_to trip_presenter.name, trip_path(trip)
  %td= trip_presenter.start_date
  %td= trip_presenter.end_date
  %td= trip_presenter.route_name
  %td= trip_presenter.bus_name
  %td= trip_presenter.created_at
  %td
    = link_to 'Generate TripSheet', trip_sheet_path(trip), icon: :road ,class: t('buttons.mini.default'), target: '_blank'
    = link_to 'Show', trip, icon: :info, class: t('buttons.mini.info')