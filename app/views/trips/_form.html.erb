<%= simple_form_for @trip, html: { class: 'form-horizontal' } do |f| %>
    <div class="control-group">
      <div class="controls">
        <%= f.button :submit  %>
        <%= link_to 'Cancel', trips_path, class: 'btn btn-default' %>
      </div>
    </div>

    <fieldset>
      <%= f.input :name, autofocus: true, placeholder: 'Name' %>
      <%= f.input :start_date, as: :date, use_short_month: true, start_year: Date.current.year, order: [:day, :month, :year], input_html: { class: 'input-small' }  %>
      <%= f.input :end_date, as: :date, use_short_month: true, start_year: Date.current.year, order: [:day, :month, :year], input_html: { class: 'input-small' }  %>
      <%= f.association :route, as: :radio_buttons, item_wrapper_class: 'inline' %>
      <%= f.association :bus, as: :radio_buttons, item_wrapper_class: 'inline' %>
      <%= f.association :drivers, as: :check_boxes, item_wrapper_class: 'inline' %>
      <%= f.input :notes, as: :text, placeholder: 'Notes' %>
    </fieldset>
    <div class="control-group">
      <div class="controls">
        <%= f.button :submit  %>
        <%= link_to 'Cancel', trips_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
