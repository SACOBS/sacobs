<tr>
  <td>
    <%= link_to copy_trip_path(trip), method: :post, class: 'btn btn-success btn-xs', data: { toggle: 'tooltip', title: 'Click here to create a copy of this trip.' }, rel: 'tooltip' do %>
      <%= fa_icon :copy, text: 'Copy' %>
    <% end %>
    <%= link_to trip_sheet_path(trip), class: 'btn btn-default btn-xs', target: '_blank' do %>
      <%= fa_icon :road, text: 'Tripsheet' %>
    <% end %>
    <%= link_to trip, class: 'btn btn-info btn-xs' do %>
      <%= fa_icon :info, text: 'Show' %>
    <% end %>
    <% if trip.bookings.size.zero? %>
      <%= link_to edit_trip_path(trip), class: 'btn btn-warning btn-xs' do %>
        <%= fa_icon :edit, text: 'Edit' %>
      <% end %>
      <%= link_to trip, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: t('messages.confirm', resource: :trip) } do %>
        <%= fa_icon :times, text: 'Destroy' %>
      <% end %>
    <% end %>
  </td>
  <td>
    <%= link_to trip.name, trip %>
  </td>
  <td>
    <%=  time_tag(trip.start_date, format: :day) %>
  </td>
  <td data-dateformat="ll">
    <%= time_tag(trip.start_date) %>
  </td>
  <td data-dateformat="ll">
    <%= time_tag(trip.end_date)%>
  </td>
  <td>
    <%= trip.route_name %>
  </td>
  <td>
    <%= trip.bus_name %>
  </td>
</tr>
