%tr
  %td=link_to trip.name, trip_path(trip)
  %td= l trip.start_date, format: :long if trip.start_date.present?
  %td= l trip.end_date, format: :long if trip.end_date.present?
  %td= trip.route.name.presence
  %td= trip.bus_name.presence
  %td= l trip.created_at
  %td
    = link_to 'Copy', copy_trip_path(trip), icon: :copy ,class: t('buttons.mini.warning'), method: :post
    = link_to 'Generate TripSheet', trip_sheet_path(trip), icon: :road ,class: t('buttons.mini.default')
    = link_to 'Show', trip, icon: :info, class: t('buttons.mini.info')
    = link_to 'Edit', trip_builder_path(:details, trip_id: trip), icon: :edit,  class: t('buttons.mini.inverse')
    = link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger', icon: :times