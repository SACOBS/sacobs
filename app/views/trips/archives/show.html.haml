= content_for (:title) do
  #{@trip.name} #{l @trip.start_date, format: :long}
.page-header
  %h1 Trip
  .actions
    = back_to trips_archives_path
- content_for :sidebar do
  - if @trip.bus
    = display_occupancy(@trip)
  - else
    %p=@trip.bus_id

- cache @trip do
  .well
    %h4 Details
    = render 'trips/shared/details', trip: @trip
    %h4 Bookings
    = render 'trips/shared/bookings', trip: @trip

.actions
  = back_to trips_archives_path
