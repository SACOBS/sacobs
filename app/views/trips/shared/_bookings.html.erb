<%= bootstrap_table headers: ['Status', 'Client Name', 'Connection', 'Qty', 'Telephone'], types: %i(hover condensed), html_options: { class: 'sortable' } do %>
    <% trip.bookings.each do |booking| %>
        <% cache booking do %>
            <tr>
              <td>
                <%= status_label_for(booking) %>
              </td>
              <td>
                <%= link_to booking.client, target: '_blank' do %>
                    <%= content_tag(:em, booking.client.full_name) %>
                <% end %>
              </td>
              <td>
                <%= content_tag(:span, booking.stop.name, class: 'label label-inverse') %>
              </td>
              <td>
                <%= badge_for(booking.quantity) %>
              </td>
              <td>
                <%= contact_numbers_for(booking.client) %>
              </td>
            </tr>
        <% end %>
    <% end %>
<% end %>
