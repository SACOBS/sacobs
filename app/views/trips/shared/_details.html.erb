<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>Route</th>
      <th>Bus</th>
      <th>Drivers</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= trip.name %>
      </td>
      <td>
        <%=  time_tag(trip.start_date) %>
      </td>
      <td>
        <%= trip.route_name %>
      </td>
      <td>
        <%= trip.bus_name %>
      </td>
      <td>
        <ul class="list-inline">
          <% trip.drivers.each do |driver| %>
            <li><%= driver.name %></li>
          <% end %>
        </ul>
      </td>
    </tr>
  </tbody>
</table>
