.page-header
  %h1 Trip
.well
  %p
    %strong Name:
    %br
    = @trip.name
  %p
    %strong Start Date:
    %br
    = @trip.start_date
  %p
    %strong End Date:
    %br
    = @trip.end_date
  %p
    %strong Route
    %br
    =  @trip.route
  %p
    %strong Bus
    %br
    = @trip.bus
  %p
    %strong Drivers:
    %ul
      = list_of(@trip.drivers) do |driver|
        = driver.full_name
.well
  %p
    %strong Stops:
    - bootstrap_table headers:['From', 'To','Arrive', 'Depart'], types: [:bordered, :striped, :condensed], html_options: {class: 'sortable'} do
      - @trip.stops.each do |stop|
        %tr
          %td= stop.connection.from.name
          %td= stop.connection.to.name
          %td= stop.arrive.presence || 'None'
          %td= stop.depart.presence || 'None'
.form-actions
  = back_to trips_path
  = link_to 'Edit', trip_builder_path(:details, trip_id: @trip), icon: :edit, class: t('buttons.info')
  = link_to 'Destroy', trip_path(@trip), method: :delete, data: { confirm: t('messages.confirm', resource: :trip) },icon: :times ,class: t('buttons.danger')












