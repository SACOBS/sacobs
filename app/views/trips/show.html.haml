.page-header
  %h1 Trip
.well
  %p
    %strong Name:
    %br
    = @trip.name
  %p
    %strong Start Date:
    %br
    = @trip.start_date
  %p
    %strong End Date:
    %br
    = @trip.end_date
  %p
    %strong Route
    %br
    =  @trip.route
  %p
    %strong Bus
    %br
    = @trip.bus
  %p
    %strong Drivers:
    %ul
      = list_of(@trip.drivers) do |driver|
        = driver.full_name
.well
  %p
    %strong Stops:
    - bootstrap_table headers:['From', 'To','Arrive', 'Depart'], types: [:bordered, :striped, :condensed], html_options: {class: 'sortable'} do
      - @trip.stops.each do |stop|
        %tr
          %td= stop.connection.from_city_name
          %td= stop.connection.to_city_name
          %td= stop.arrive.presence || 'None'
          %td= stop.depart.presence || 'None'
.form-actions
  = link_to 'Back', trips_path, class: 'btn btn-primary', icon: iconize(:arrow_left)
  = link_to 'Edit', trip_builder_path(:details, trip_id: @trip), icon: iconize(:edit), class: 'btn btn-info'
  = link_to 'Destroy', trip_path(@trip), method: :delete, data: { confirm: 'Are you sure' },icon: iconize(:times) ,class: 'btn btn-danger'












