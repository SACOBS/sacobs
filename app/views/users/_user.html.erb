<%= content_tag_for(:tr, user) do %>
<td><%= user %></td>
<td><%= obfuscate_email user.email %></td>
<td><span class="label label-info"><%= user.role.capitalize %></span></td>
<td>
  <%= link_to user_path(user, user: { role: :admin }), method: :patch, class: 'btn btn-mini btn-warning' do %>
      <%= fa_icon :user, text: 'Upgrade role' %>
  <% end %>
  <%= link_to user_path(user, user: { role: :clerk }), method: :patch, class: 'btn btn-mini btn-warning' do %>
      <%= fa_icon :user, text: 'Downgrade role' %>
  <% end %>
</td>
<% end %>
