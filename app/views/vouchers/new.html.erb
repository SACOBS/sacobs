<%= content_for (:title) do %>
    Add Voucher
<% end %>
<div class="page-header">
  <h2>New Voucher</h2>
</div>
<h3>Please note the value of this credit voucher will be deducted from the next booking for <%= @client.full_name%>:</h3>
<div class="well">
  <%= simple_form_for [@client, @voucher], html: { class: 'form-horizontal' } do |f| %>
      <fieldset>

        <%= f.input :amount, autofocus: true %>
      </fieldset>
      <div class="control-group">
        <div class="controls">
          <%= f.button :submit %>
          <%= link_to 'Cancel', @client, class: 'btn btn-default' %>
        </div>
      </div>
  <% end %>
</div>
