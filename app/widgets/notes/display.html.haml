= widget_div id: 'notes', class: 'well' do
  %h4 Notes
  - @notes.each do |note|
    .well.well-small{ class: dom_class(note), id: dom_id(note) }
      %blockquote= note.content
      = link_to_if(@user.admin?, 'Edit', url_for_event(:edit, note_id: note.id), remote: true) {}
      = link_to 'Destroy', url_for_event(:destroy, note_id: note.id), method: :delete, remote: true
  - if @user.admin?
    .note-form
      = render({state: :form}, @notes.new)

